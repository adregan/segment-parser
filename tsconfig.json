{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "module": "es2015",
    "noImplicitAny": true,
    "removeComments": true,
    "outDir": "dist",
    "preserveConstEnums": true,
    "target": "ES5",
    "lib": ["es5", "es6"]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.test.ts"
  ]
}
